// IFT3100H23_VariableDeclaration.glsl
// Exemples de déclaration de variables en GLSL.

// 1. déclaration de variables de type booléen
bool b1 = true;
bool b2 = false;

// 2. déclaration de variables de type nombre entier
int i1 = 0;
int i2 = 1;
int i3 = -1;

// 3. déclaration de variables de type nombre réel
float f1 = 0.0;
float f2 = 1.0;
float f3 = -1.0;

// 4. différentes configurations du niveau de précision des variables numériques entières
precision lowp int;
precision mediump int;
precision highp int;

// 5. différentes configurations du niveau de précision des variables numériques réelles
precision lowp float;
precision mediump float;
precision highp float;
